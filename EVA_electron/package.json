{
  "name": "eva-ai-assistant",
  "version": "1.0.0",
  "description": "EVA AI Assistant",
  "main": "main.js",
  "author": {
    "name": "EVA Team",
    "email": "eva@example.com"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder --dir"
  },
  "build": {
    "appId": "com.eva.assistant",
    "productName": "EVA AI Assistant",
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": [
        "dir",
        "AppImage"
      ],
      "icon": "build/icon.png"
    }
  },
  "dependencies": {
    "axios": "^1.8.4",
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^25.1.8"
  }
}
